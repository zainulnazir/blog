<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>My Blog</title>
</head>
<body>
    <header>
        <h1>Welcome to My Blog</h1>
    </header>
    <main>
        <section id="posts">
            <% if (posts.length > 0) { %>
                <% posts.forEach(post => { %>
                    <article>
                        <h2><%= post.title %></h2>
                        <p><%= post.content %></p>
                        <p><em>By <%= post.author %> on <%= post.createdAt.toDateString() %></em></p>
                    </article>
                <% }); %>
            <% } else { %>
                <p>No posts available.</p>
            <% } %>
        </section>
    </main>
    <footer>
        <p>&copy; <%= new Date().getFullYear() %> My Blog. All rights reserved.</p>
    </footer>
    <script src="/js/scripts.js"></script>
</body>
</html>